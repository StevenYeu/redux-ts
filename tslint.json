{
  "extends": [
    "tslint:recommended",
    "tslint-react",
    "tslint-config-prettier",
    "tslint-plugin-prettier"
  ],
  "rules": {
    "interface-name": false,
    "object-literal-sort-keys": false,
    "prettier": [
      true,
      {
        "singleQuote": true,
        "semi": true,
        "printWidth": 100
      }
    ]
  },
  "defaultSeverity": "warning",
  "linterOptions": {
    "exclude": [
      "config/**/*.js",
      "node_modules/**/*.ts",
      "coverage/lcov-report/*.js"
    ]
  }
}